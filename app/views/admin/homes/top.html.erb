<div class="row">
  <% @shoes_reviews.first(4).each do |shoes_review| %>
    <div class="col-md-3 col-sm-6">
    <div class="card w-100 bg-transparent border-0" style="width: 18rem;">
      <%= link_to admin_review_shoes_reviews_path do %>
        <% if shoes_review.image.attached? %>
          <%= image_tag shoes_review.image, size: "100x100" %>
        <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
        <% end %>
      <% end %>
        <div class="card-body">
          <p class="card-text">Review Title:<%= shoes_review.title %></p>
          <p class="card-text">Reviewer Nickname:<%= shoes_review.user.nickname %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
