<div class="container">
  <div class="row mt-2 mb-2">
    <h2 style="border: 5px double #FF1A6F;">User BasketballShoes NEW Review</h2>
  </div>
  <div class="row" style="border: 5px double #FF1A6F;">
    <% @shoes_reviews.first(4).each do |shoes_review| %>
      <div class="col-3 border: 5px double #FF1A6F;">
        <div class="bg-transparent text-center mt-2 mb-2" style="border: 5px double #FF1A6F;">
          <div class="mt-2">
            <%= link_to admin_review_shoes_reviews_path do %>
              <% if shoes_review.image.attached? %>
                <%= image_tag shoes_review.image, size: "100x100" %>
              <% else %>
                <%= image_tag 'no_image', size: "100x100" %>
              <% end %>
            <% end %>
          </div>
          <div>
            <p style="border: 5px double #FF1A6F;">Review Title<br> <%= shoes_review.title %></p>
            <p style="border: 5px double #FF1A6F;">Reviewer Nickname<br> <%= shoes_review.user.nickname %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row mt-2 mb-2">
    <h2 style="border: 5px double #FF1A6F;">New Resistration User</h2>
  </div>
  <div class="row mb-2" style="border: 5px double #FF1A6F;">
    <% @users.first(4).each do |user| %>
      <div class="col-3 border: 5px double #FF1A6F;">
        <div class="bg-transparent text-center mt-2 mb-2" style="border: 5px double #FF1A6F;">
          <div class="mt-2">
            <%= link_to admin_user_path(user) do %>
              <% if user.image.attached? %>
            <%= image_tag user.image, size: "100x100" %>
              <% else %>
            <%= image_tag 'no_image', size: "100x100" %>
              <% end %>
            <% end %>
          </div>
          <div>
            <p style="border: 5px double #FF1A6F;">New Resistration User E-mail<br><%= link_to admin_user_path(user) do %><%= user.email %><% end %></p>
            <p style="border: 5px double #FF1A6F;">New Resistration User Nickname<br><%= user.nickname %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>