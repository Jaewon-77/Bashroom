<div class="container">
  <div class="row">
    <div class="row my-3 offset-1 text-center">
      <h2><%= @user.first_name_kana %><%= @user.last_name_kana %>さんの会員詳細 </h2>
    </div>
    <table class="table">
      <tr>
        <td>会員ID</td>
        <td><%= @user.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= @user.first_name_kana %><%= @user.last_name_kana %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= @user.first_name_kana %><%= @user.last_name_kana %></td>
      </tr>
      <tr>
        <td>年齢</td>
        <td><%= @user.age %></td>
      </tr>
      <tr>
        <td>ニックネーム</td>
        <td><%= @user.nickname %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @user.address %></td>
      </tr>
      <tr>
        <td>好きなブランド</td>
        <td><%= @user.favorite_brand %></td>
      </tr>
      <tr>
        <td>好きなバスケットボールシューズ</td>
        <td><%= @user.favorite_shoes_name %></td>
      </tr>
      <tr>
        <td>バスケットボールシューズサイズ</td>
        <td><%= @user.size %></td>
      </tr>
            <tr>
        <td>会員ステータス </td>
        <td>
          <% if @user.is_active? %>
            <p class="">有効</p>
          <% else %>
            <p class="text-success">退会済</p>
          <% end %>
        </td>
      </tr>
      <tr>
        <td></td>
        <td>
          <%= link_to "編集する", edit_admin_user_path(@user),class:"btn btn-success my-1 mx-4 px-4" %>
          <%= link_to "トップページへ", admin_homes_top_path,class:"btn btn-primary mx-4 px-4" %>
        </td>
      </tr>
    </table>
  </div>
</div>