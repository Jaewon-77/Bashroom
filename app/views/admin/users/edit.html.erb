<div class="container">
  <div class="row mt-3 mb-3 offset-1 text-center">
    <h2><%= @user.last_name_kana %><%= @user.first_name_kana %>さんの会員詳細編集</h2>
  </div>
  <%= form_with model: @user, url: admin_user_path(@user), method: :patch, local: true do |f| %>

  <table class="table">
    <tr>
      <div>
      <td>会員ID</td>
      <td><%= @user.id %></td>
      </div>
    </tr>

    <tr>
      <div>
        <td><%= f.label "氏名" %></td>
        <td><%= f.text_field :last_name,  placeholder: "姓" %></td>
        <td><%= f.text_field :first_name,  placeholder: "名" %></td>
      </div>
    </tr>

    <tr>
      <div>
        <td><%= f.label "フリガナ" %></td>
        <td><%= f.text_field :last_name_kana, placeholder: "セイ" %></td>
        <td><%= f.text_field :first_name_kana, placeholder: "メイ" %></td>
      </div>
    </tr>

    <tr>
      <div>
        <td><%= f.label "年齢" %></td>
        <td><%= f.text_field :age, placeholder: "20" %></td>
      </div>
    </tr>

    <tr>
      <div>
        <td><%= f.label "ニックネーム" %></td>
        <td><%= f.text_field :nickname, placeholder: "Nickname" %></td>
      </div>
    </tr>

    <tr>
      <div>
        <td><%= f.label "メールアドレス" %></td>
        <td><%= f.email_field :email, placeholder: "xxxxx@xxxxx.com" %></td>
      </div>
    </tr>

    <tr>
      <div>
        <td><%= f.label "住所" %></td>
        <td><%= f.text_field :address, placeholder: "長野県XX市XX区XX町0-0" %></td>
      </div>
    </tr>

    <tr>
      <div>
        <td><%= f.label "好きなブランド" %></td>
        <td><%= f.text_field :favorite_brand, placeholder: "0901231234" %></td>
      </div>
    </tr>

    <tr>
      <div>
        <td><%= f.label "好きなバスケットボールシューズ" %></td>
        <td><%= f.text_field :favorite_shoes_name, placeholder: "0901231234" %></td>
      </div>
    </tr>

    <tr>
      <div>
        <td><%= f.label "バスケットボールシューズサイズ" %></td>
        <td><%= f.text_field :size, placeholder: "0901231234" %></td>
      </div>
    </tr>

    <tr>
      <div>
        <td><%= f.label "会員ステータス" %></td>
        <td><%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "有効" %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "退会" %><br/>
        </td>
      </div>
    </tr>
  </table>

  <div align="center">
    <%= f.submit "変更を保存", class: 'btn btn-success' %>
  </div>
  <% end %>
  <div class="mb-3"></div>
</div>
