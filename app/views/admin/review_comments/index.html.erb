<div class="container mt-5">
<h3>ユーザーコメント一覧</h3>
<table class="table mt-3">
  <tr>
    <th class="col-2">名前</th>
    <th class="col-2">ニックネーム</th>
    <th class="col-8">コメント</th>
    <th class="col-1"></th>
    <th class="col-1"></th>
  </tr>
<% @comments.each do |comment| %>
  <tr>
    <td class="col-2"><%= link_to admin_user_path(comment.user) do %>
    <%= @users.find(comment.user_id).first_name %><%= @users.find(comment.user_id).last_name %>

    <% end %>
      </td>
    <td class="col-2"><%= comment.user.nickname %></td>
    <td class="col-8"><%= comment.user_comment %></td>
    <td class="col-1"><%= comment.created_at.strftime('%Y/%m/%d') %></td>
    <td class="col-1">
    <%= link_to '削除', admin_review_comments_path(comment), method: :delete, data: { confirm: '本当に削除しますか?' },class: "btn btn-sm btn-danger" %>
    </td>
  </tr>
<% end %>
</table>

</div>