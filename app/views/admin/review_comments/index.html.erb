<div class="container">
  <div class="row my-3">
    <div class="col-5 px-sm-0 offset-sm-1 text-center">
      <h2 style="border: 5px double #FF1A6F;">ユーザーコメント一覧</h2>
    </div>
    <div class="col-12" style="padding: 15px; margin-top: 30px; margin-bottom: 30px; border: 5px double #FF1A6F;">
      <table class="table table-dark table-striped　table-bordered table-hover text-white text-center" style="background-color: black">
        <thead class="table-active text-center">
          <tr>
            <th>名前</th>
            <th>ニックネーム</th>
            <th>コメント</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @comments.each do |comment| %>
            <tr>
              <td>
                <%= link_to admin_user_path(comment.user) do %>
                  <%= @users.find(comment.user_id).first_name %><%= @users.find(comment.user_id).last_name %>
                <% end %>
              </td>
              <td><%= comment.user.nickname %></td>
              <td><%= comment.user_comment %></td>
              <td><%= comment.created_at.strftime('%Y/%m/%d') %></td>
              <td>
                <%= link_to '削除', admin_review_comment_path(comment), method: :delete, data: { confirm: '本当に削除しますか?' },class: "btn btn-outline-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>