<div class="container">
  <div class="row my-3">
    <div class="col-12 mx-auto my-3">
      <h2 class="col-5 text-center" style="border: 5px double #FF1A6F;">★<%= @shoes_review.title %>Basketball Shoes Review Edit★</h2>
      <div class="col-12" style="border: 5px double #FF1A6F;">
        <%= form_with model: @shoes_review, url: public_shoes_review_path(@shoes_review.id), method: :patch, local: true do |f| %>
        <div style="float: left; margin: 15px 50px; border: 5px double #FF1A6F;">
          <%= f.label :"BasketballShoes Review Title",class:"col-sm-8 control-label" %>
          <%= f.text_field :title, autofocus: true, autocomplete: "size" %>
          </div>
        <div style="float: left; margin: 15px 50px; border: 5px double #FF1A6F;">
          <%= f.label :"バスケットボールシューズ写真" %><br>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <table class="table table-dark table-striped　table-bordered table-hover text-white text-center" style="border: 5px double #FF1A6F; background-color: black ">
          <thead>
            <tr>
              <th></th>
              <th>Traction</th>
              <th>Cushion</th>
              <th>Fit</th>
              <th>Support</th>
              <th>Weight</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>点数記入(10点満点)</td>
              <td><%= f.text_field :traction, autofocus: true, autocomplete: "size",size: "5x5" %></td>
              <td><%= f.text_field :cushion, autofocus: true, autocomplete: "size",size: "5x5" %></td>
              <td><%= f.text_field :fit, autofocus: true, autocomplete: "size",size: "5x5" %></td>
              <td><%= f.text_field :support, autofocus: true, autocomplete: "size",size: "5x5" %></td>
              <td><%= f.text_field :weight, autofocus: true, autocomplete: "size",size: "5x5" %></td>
            </tr>
          </table>
          <div style="border: 5px double #FF1A6F; margin-bottom: 20px;">
            <label>タグ(,で区切ると複数タグ登録できます)</label>
            <%= f.text_field :name,value: @tag_list, class: 'form-control' %>：
              <% if @shoes_review.new_record? %>
                <%= f.submit '新規作成', class: "btn btn-outline-success mt-4" %>
              <% else %>
                <%= f.submit '更新する', class: "btn btn-outline-success mt-4" %>
            <% end %>
          </div>
          <div style="border: 5px double #FF1A6F; margin-bottom: 20px;">
            <%= f.text_area :review, autofocus: true, autocomplete: "size", style: "width: 1000px;" %>
              <%= f.submit "編集内容を保存", class: "btn btn-outline-success"  %>
            <% end %>
          </div>
       </div>
    </div>
  </div>
</div>