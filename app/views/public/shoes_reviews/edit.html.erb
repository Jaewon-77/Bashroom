<div class="container">
  <h2>★NEW Basketball Shoes Review Edit★</h2>
  <div class="row my-3">
    <div class="col-md-2 mx-auto my-3">
    </div>
    <div class="col-md-10">
      <div class="row" style="margin-top: 50px;">
        <%= form_with model: @shoes_review, url: public_shoes_review_path(@shoes_review.id), method: :patch, local: true do |f| %>
        <div style="float: left; margin: 15px 50px;">
          <%= f.label :"バスケットボールシューズレビュタイトル",class:"col-sm-8 control-label" %>
          <%= f.text_field :title, autofocus: true, autocomplete: "size" %>
          <br>
          <%= f.label :"バスケットボールシューズ写真" %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <table class="table table-dark table-hover">
          <thead>
   　　　　　　 <tr>
    　　       <th scope="col">★</th>
             <th scope="col">Traction</th>
             <th scope="col">Cushion</th>
             <th scope="col">Fit</th>
             <th scope="col">Support</th>
             <th scope="col">Weight</th>
             <th scope="col">合計点数</th>
          </tr>
          </thead>
          <tbody>
          <tr>
          <th scope="row">点数記入(10点満点)</th>
          <td><%= f.text_field :traction, autofocus: true, autocomplete: "size" %></td>
          <td><%= f.text_field :cushion, autofocus: true, autocomplete: "size" %></td>
          <td><%= f.text_field :fit, autofocus: true, autocomplete: "size" %></td>
          <td><%= f.text_field :support, autofocus: true, autocomplete: "size" %></td>
          <td><%= f.text_field :weight, autofocus: true, autocomplete: "size" %></td>
          <td>合計点数</td>
          </tr>
          </table>
          <%#= render 'shoes_reviews/form' %>
          <div>
            <label>タグ(,で区切ると複数タグ登録できます)</label>
        <%= f.text_field :name,value: @tag_list, class: 'form-control' %>
：
      <% if @shoes_review.new_record? %>
        <%= f.submit '新規作成', class: "btn btn-success mt-4" %>
      <% else %>
        <%= f.submit '更新する', class: "btn btn-success mt-4" %>
      <% end %>
          </div>

　　　　<%= f.text_area :review, autofocus: true, autocomplete: "size", style: "width: 1000px;" %>

        <%= f.submit "編集内容を保存", class: "btn btn-success" , style: "width: 200px;" %>
        <% end %>
      </div>
    </div>
  </div>
</div>