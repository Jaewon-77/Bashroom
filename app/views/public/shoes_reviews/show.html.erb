<div class="container">
  <div class="row my-3">
    <div class="col-md-12 mx-auto my-3">
      <h2><%= @shoes_review.title %>のReview</h2>
      <p>
        <%= link_to public_users_mypage_path(@shoes_review.user.id)  do %>
          <% if @user.image.attached? %>
          <%= image_tag @user.image, class: "rounded-circle", size: "50x50" %>
          <% else %>
          <%= image_tag 'no_image', class: "rounded-circle", size: "50x50" %>
          <% end %>
          <% end %>
        投稿者:<%=@user.nickname%>
      </p>
    </div>
    <div class="col-md-10">
      <div class="row" style="margin-top: 50px;">
        <div class="col-12">バスケットボールシューズ写真</div>
        <div style="float: left; margin: 15px 50px;">
          <% if @shoes_review.image.attached? %>
            <%= image_tag @shoes_review.image, size: "200x200" %>
          <% else %>
            <%= image_tag 'no_image', size: "200x200" %>
         <% end %>
        </div>
        <div class="col-12">バスケットボールシューズ評価</div>

        <table class="table table-dark table-hover">
          <thead>
   　　　　　　 <tr>
    　　       <th scope="col">★</th>
             <th scope="col">Traction</th>
             <th scope="col">Cushion</th>
             <th scope="col">Fit</th>
             <th scope="col">Support</th>
             <th scope="col">Weight</th>
             <th scope="col">合計点数</th>
          </tr>
          </thead>
          <tbody>
          <tr>
          <th scope="row"></th>
          <td><%= @shoes_review.traction %></td>
          <td><%= @shoes_review.cushion %></td>
          <td><%= @shoes_review.fit %></td>
          <td><%= @shoes_review.support %></td>
          <td><%= @shoes_review.weight %></td>
          <td><%= @shoes_review.sum_total %></td>
          </tr>
          </table>



        <div style="width:400px; height:300px; float:left;">
          <h2>バスケットボールレビュー</h2>
          <h3><%= @shoes_review.review %></h3>
        </div>

        <div>
        <p>コメント件数：<%= @shoes_review.comments.count %></p>
         <% @shoes_review.comments.each do |comment| %>
         <p><% if @user.image.attached? %>
             <%= image_tag @user.image, class: "rounded-circle", size: "30x30" %>
           <% else %>
             <%= image_tag 'no_image', class: "rounded-circle", size: "30x30" %>
           <% end %>
          </p>
         <%= comment.user.nickname %>
         <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
         <% end %>
         </div>
         <% if @comment.user == current_user %>
      <%= link_to "削除", shoes_review_comment_path(omment.shoes_review, comment), method: :delete %>
    <% end %>
<div>
  <%= form_with model: [@shoes_review, @comment], url: public_shoes_review_path(@shoes_review.id) do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>


        <% if @shoes_review.favorited_by?(current_user) %>
    <p>
      <%= link_to public_shoes_review_favorite_path(@shoes_review), method: :delete do %>
        ♥<%= @shoes_review.favorites.count %>
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to public_shoes_review_favorite_path(@shoes_review), method: :post do %>
        ♡<%= @shoes_review.favorites.count %>
      <% end %>
    </p>
  <% end %>





        <% if @user.id == current_user.id %>

        <div class="col-2">
          <%= link_to "レビューを編集", edit_public_shoes_review_path, class:"btn btn-primary" %>
        </div>
        <div class="col-2"><%= link_to "レビューを削除", public_shoes_review_path(@shoes_review.id), method: :delete, "data-confirm" => "本当に削除しますか？" , class: "btn btn-sm btn-danger destroy" %>
          </div>
          <%else%>
        <% end %>
          <div class="col-2">
          <%= link_to "レビュー一覧", public_shoes_reviews_path, class:"btn btn-success" %>
        </div>
      </div>
    </div>

  </div>
</div>