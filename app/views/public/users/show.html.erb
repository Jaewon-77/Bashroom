<div class="container">
  <div class="row mt-3 mb-3 offset-1 text-center">
    <div class="col-12">
      <h2>ユーザープロフィール</h2>
    </div>
    <div class="col-12">
      <% if @user.image.attached? %>
        <%= image_tag @user.image, class: "rounded-circle", size: "200x200" %>
      <% else %>
        <%= image_tag 'no_image', class: "rounded-circle", size: "200x200" %>
      <% end %>
    </div>
    <div class="col-12">
      <h5>プロフィール写真</h5>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-2">
      <% if @user.id == current_user.id %>
      <%= link_to "編集", public_users_information_edit_path, class:"btn btn-primary" %>
      <%else%>
      <% end %>
    </div>
    <div class="col-12">
      <div style="padding: 15px; margin-bottom: 10px; border: 5px double #660000; background-color: #AFEEEE;">
      <table class="table table-bordered">
        <!--<tr>-->
        <!--  <th class="table-active w-25">メールアドレス</th>-->
          <%#= @user.email %>
        <!--</tr>-->
        <tr>
          <th class="table-active w-25">氏名</th>
          <td><%= @user.last_name %><%= @user.first_name %></td>
        </tr>
        <tr>
          <th class="table-active w-25">フリガナ</th>
          <td><%= @user.last_name_kana %><%= @user.first_name_kana %></td>
        </tr>
        <tr>
          <th class="table-active w-25">ニックネーム</th>
          <td><%= @user.nickname %></td>
        </tr>
        <tr>
          <th class="table-active w-25">年齢</th>
          <td><%= @user.age %></td>
        </tr>
        <tr>
          <th class="table-active w-25">住所</th>
          <td><%= @user.address %></td>
        </tr>
        <tr>
          <th class="table-active w-25">好きなバスケットボールシューズブランド名</th>
          <td><%= @user.favorite_brand %></td>
        </tr>
        <tr>
          <th class="table-active w-25">好きなバスケットボールシューズ名</th>
          <td><%= @user.favorite_shoes_name %></td>
        </tr>
        <tr>
          <th class="table-active w-25">バスケットボールシューズサイズ</th>
          <td><%= @user.size %></td>
        </tr>
        <!--추가 하고 싶은것은 팔로우수 팔로워수 그리고 그 팔로우수로 이동 할수있게 하는 것-->
      </table>
    </div>
  </div>
</div>
  <div class="row mt-3">
    <div class="col-3">
      <h3>作成したレビュー一覧</h3>
    </div>
    <div class="col">
      <%#= link_to "一覧を見る", public_?_path, class:"btn btn-primary" %>
    </div>
  </div>

  <div class="row my-2">
    <div class="col-3">
      <h3>いいねしたレビュー一覧</h3>
    </div>
    <div class="col">
      <%= link_to "一覧を見る", public_users_favorites_path(@user.id), class:"btn btn-primary" %>
    </div>
  </div>

</div>