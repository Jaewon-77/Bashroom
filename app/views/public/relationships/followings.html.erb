<h1>Following User</h1>
<table class="table">
        <thead>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </thead>
        <tbody>

     <% @users.each do |user| %>
       <tr>
         <td><% if user.image.attached? %>
        <%= image_tag user.image, class: "rounded-circle", size: "200x200" %>
      <% else %>
        <%= image_tag 'no_image', class: "rounded-circle", size: "200x200" %>
      <% end %></td>
         <td><%= link_to public_user_path(user) do %>
           <%= user.nickname %><% end %></td>
         <td>
           <p>フォロワー数：<%= user.followers.count %></p>
         </td>
         <td>
           <p>フォロー数：<%= user.followings.count %></p>
         </td>
         <td>
           </td>
       </tr>
     <% end %>
</tbody>
</table>
<%= link_to "戻る", :back %>
