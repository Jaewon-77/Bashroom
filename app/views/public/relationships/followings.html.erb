<div class="container">
  <div class="row">
    <div class="col mt-4">
      <h2 class="text-center mb-4" style="font-weight:bold; color:#FF1A6F; font-family: Rounded M+ 1c;">Following User</h2>
      <div style="padding: 15px; margin-bottom: 30px; border: 5px double #FF1A6F; font-family: 'Sacramento', cursive;">
        <table class="table table-dark table-striped　table-bordered table-hover text-white table03" style="background-color: black">
          <thead>
            <th>Profile Photo</th>
            <th>Nickname</th>
            <th>フォロワー数</th>
            <th>フォロー数</th>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <% if user.image.attached? %>
                    <%= image_tag user.image, class: "rounded-circle", size: "50x50" %>
                  <% else %>
                    <%= image_tag 'no_image.jpg', class: "rounded-circle", size: "50x50" %>
                  <% end %>
                </td>
                <td>
                  <%= link_to public_user_path(user) do %>
                    <%= user.nickname %>
                  <% end %>
                </td>
                <td>
                  <p><%= user.followers.count %></p>
                </td>
                <td>
                  <p><%= user.followings.count %></p>
                </td>
                <td></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <%= link_to "戻る", :back, class:"btn btn-outline-warning mb-2"%>
</div>
